{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sf": true,
    "**/.sfdx": true
  },
  "xml.preferences.showSchemaDocumentationType": "none",

  // Salesforce Conflict Resolution Settings
  "salesforcedx-vscode-core.push-or-deploy-on-save.enabled": false,
  "salesforcedx-vscode-core.retrieve-test-code-coverage": true,
  "salesforcedx-vscode-core.show-cli-success-msg": true,
  "salesforcedx-vscode-core.detectConflictsAtSync": true,
  
  // Git & Merge Settings
  "git.autofetch": true,
  "git.confirmSync": false,
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "merge-conflict.codeLens.enabled": true,
  "merge-conflict.decorators.enabled": true,
  
  // Diff Editor Settings for Conflict Resolution
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "diffEditor.codeLens": true,
  
  // Auto-save settings (recommended to disable during conflict resolution)
  "files.autoSave": "off",
  
  // Source Control
  "scm.defaultViewMode": "tree",
  "git.enableSmartCommit": false,
  
  // Salesforce Deployment Settings
  "salesforcedx-vscode-core.experimental.deployRetrieve": true,
  "salesforcedx-vscode-core.telemetry.enabled": false
}
